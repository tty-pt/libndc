    "ndc": "./ndc-cli.js"
  },
  "files": [
    "ndc.css",
    "htdocs",
    ".index",
    "cjs",
    "esm",
    "src/*.c",
    "ndc.pc",
    "ndc.js",
    "include",
    "Makefile"
