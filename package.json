    "@xterm/xterm": "^5.5.0",
    "lodash": "^4.17.21"
  },
  "peerDependencies": {
    "@tty-pt/mk": "^0.1.18",
    "@tty-pt/ndx": "^0.0.5",
    "@tty-pt/qmap": "^0.3.1",
    "@tty-pt/qsys": "^0.0.11",
