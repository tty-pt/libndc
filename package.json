    "build": "scripts build",
    "watch": "scripts watch",
    "lint": "scripts lint",
    "postinstall": "make"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tty-pt/ndc.git"
  },
  "author": "quirinpa",
  "license": "BSD-2-Clause",
  "bugs": {
    "url": "https://github.com/tty-pt/ndc/issues"
  },
  "homepage": "https://tty.pt",
  "devDependencies": {
    "@tty-pt/mk": "^0.1.18",
    "@tty-pt/ndx": "^0.0.5",
    "@tty-pt/qmap": "^0.3.1",
